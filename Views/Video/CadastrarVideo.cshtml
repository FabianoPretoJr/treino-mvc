@model treino_mvc.DTO.VideoDTO;

@{
    ViewData["Title"] = "Cadastrar Video";
}
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <br/><h2>Cadastrar novo Video</h2><br/>
        <section>
            <div class="card-login">
                <form class="form-horizontal" asp-controller="Video" asp-action="Salvar" method="POST">

                    <input type="hidden" asp-for="Id" value="@ViewData["aux1"]"/>

                    <div class="form-group">
                        <label asp-for="Nome">Nome</label>
                        <input type="text" asp-for="Nome" class="form-control" placeholder="Aula 1" />
                        <span asp-validation-for="Nome"></span><br/>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="LinkVideo"></label>
                        <input type="text" asp-for="LinkVideo" class="form-control" placeholder="youtube.com.br/" />
                        <span asp-validation-for="LinkVideo"></span><br/>
                    </div>

                    <div class="form-group">
                        <label asp-for="Descricao"></label>
                        <textarea asp-for="Descricao" class="form-control" rows="5" cols="50" placeholder="Nessa aula falaremos como configurar..."></textarea>
                        <span asp-validation-for="Descricao"></span><br/>
                    </div>
                  
                    <input type="hidden" asp-for="CursoID" value="@ViewData["idCursoVideo"]"/>

                    <div class="form-group">
                        <button type="submit" class="button-curso">Cadastrar</button>
                    </div>
                </form>
            </div>
        </section>
    </div>
    <div class="col-md-2"></div>
</div>